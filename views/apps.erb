<div class="parallax-container page-parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h4 class="header col s12 light"><%= t 'apps' %></h4>
            </div>
        </div>
    </div>
    <div class="parallax">
        <img src="<%= url '/' %>images/banner-5.jpg" alt="Apps Background Image">
    </div>
</div>

<div class="row brown lighten-5 page-content-container">
    <nav>
        <div class="navigator nav-wrapper brown lighten-2">
            <div class="col s12 page-nav-text">
                <a href="<%= to '/' %>" class="breadcrumb"><%= t 'home' %></a>
                <a class="breadcrumb"><%= t 'apps' %></a>
            </div>
        </div>
    </nav>
    <div class="card-sent">
        <div class="row">
            <div class="col m6 push-m3 s12 center">
                <div class="card">
                    <div class="card-content">
                        <p class="card-title"><%= t 'static_content.apps.ios' %></p>
                        <br>
                        <img src="<%= url '/' %>images/ios.png" alt="iOS app download icon" class="mobile-app-icon">
                    </div>
                    <div class="card-action">
                        <a class="brown-text" href="#"><%= t 'static_content.apps.go_to_app_store' %></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col m6 push-m3 s12 center">
                <div class="card">
                    <div class="card-content">
                        <p class="card-title"><%= t 'static_content.apps.android' %></p>
                        <br>
                        <img src="<%= url '/' %>images/android.png" alt="Android app download icon" class="mobile-app-icon">
                    </div>
                    <div class="card-action">
                        <a class="brown-text" href="#"><%= t 'static_content.apps.go_to_play' %></a>
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>
