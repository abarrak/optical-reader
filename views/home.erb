<div id="index-banner" class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <h3 class="header center brown-text open-sans"><%= t 'static_content.home.intro.head' %></h3>
            <div class="row center">
                <h5 class="header col s12 light">
                  <%= t 'static_content.home.intro.text' %>
                </h5>
            </div>
            <div class="row center">
                <a href="<%= to '/' %>scan" id="download-button" class="btn-large waves-effect waves-light brown lighten-1">
                  <%= t 'static_content.home.intro.btn' %>
                </a>
            </div>
        </div>
    </div>
    <div class="parallax">
        <img src="<%= url '/' %>images/banner-1.jpg" alt="Documents Banner">
    </div>
</div>

<div class="container">
    <div class="section">

        <!-- Icon Section -->
        <div class="row">
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text">
                        <i class="material-icons">thumb_up</i>
                    </h2>
                    <h5 class="center"><%= t 'static_content.home.column1.title' %></h5>
                    <p class="light"><%= t 'static_content.home.column1.content' %></p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text">
                        <i class="material-icons">translate</i>
                    </h2>
                    <h5 class="center"><%= t 'static_content.home.column2.title' %></h5>

                    <p class="light"><%= t 'static_content.home.column2.content' %></p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text">
                        <i class="material-icons">library_books</i>
                    </h2>
                    <h5 class="center"><%= t 'static_content.home.column3.title' %></h5>

                    <p class="light"><%= t 'static_content.home.column3.content' %></p>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="parallax-container">
    <div class="container center">
        <div class="row">
            <h5 class="header col s12 light mobile-app-header">
                <%= t 'static_content.home.mobile_adv' %>
            </h5>
        </div>
        <div class="row center">
            <img src="<%= url '/' %>images/ios.png" alt="iOS app download icon" class="mobile-app-icon">
            <img src="<%= url '/' %>images/android.png" alt="Android app download icon" class="mobile-app-icon">
        </div>
    </div>
    <div class="parallax">
        <img src="<%= url '/' %>images/banner-3.jpg" alt="Unsplashed background img 3">
    </div>
</div>
