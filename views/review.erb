<div class="parallax-container page-parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
              <h4 class="header col s12 light"><%= t 'static_content.wizard.title' %></h4>
            </div>
        </div>
    </div>
    <div class="parallax">
        <img src="<%= url '/' %>images/banner-100.jpg" alt="Review Background Image">
    </div>
</div>

<div class="container">
    <div class="wizard">
        <div class="row">
            <div class="stepwizard">
                <div class="stepwizard-row">
                    <div class="stepwizard-step">
                        <a type="button" class="btn-floating waves-effect waves-light brown disabled" disabled="disabled">1</a>
                        <p><%= t 'scan' %></p>
                    </div>
                    <div class="stepwizard-step">
                        <a type="button" class="btn-floating waves-effect waves-light brown">2</a>
                        <p><%= t 'review' %></p>
                    </div>
                    <div class="stepwizard-step">
                        <a type="button" class="btn-floating waves-effect waves-light brown disabled" disabled="disabled">3</a>
                        <p><%= t 'export' %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 center">
          <div class="row">
                <h3 class="brown-text text-darken-3 wizard-title">
                    <span class="underline"><%= t 'review' %></span>
                </h3>
                <p class="wizard-help-text"></p>
          </div>
          <form role="form" action="<%= to '/export' %>" method="post" accept-charset="UTF-8">
              <input name="utf8" type="hidden" value="&#x2713;" />
              <input type="hidden" name="<%= csrf_name %>" value="<%= csrf_token %>">
                <div class="row">
                    <div class="section clearfix">
                        <div class="col l5 s12">
                          <div>
                            <p class="wizard-help-text center-align">
                              <%= t 'static_content.wizard.review.document_image' %>
                            </p>
                            <img src="<%= document_url %>" alt="Uploaded document image" class="responsive-img review-img">
                          </div>
                        </div>
                        <div class="col l1 s12">
                          <div class="editor-divider">
                          </div>
                        </div>
                        <div class="col l5 offset-l1 s12">
                            <p class="wizard-help-text center-align">
                              <%= t 'static_content.wizard.review.ocr_output' %>
                            </p>
                            <div class="row">
                              <div class="input-field col s12">
                                <i class="material-icons prefix">description</i>
          <textarea id="reviewed_text" name="reviewed_text" class="materialize-textarea"><%= output %></textarea>
                                <label for="reviewed_text"><%= t 'static_content.wizard.review.editor' %></label>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="section">
                        <div class="col s12 center">
                            <button class="btn waves-effect brown darken-1 waves-light" type="submit" name="submit"><%= t 'static_content.wizard.next' %>
                                <i class="material-icons right">trending_flat</i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
